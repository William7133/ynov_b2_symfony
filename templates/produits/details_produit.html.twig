                                {% endif %}
                            </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                          <a href="{{ path("ajouter_produit_session" , {id:produit.id}) }}" class="btn btn-success">Ajouter au Panier</a>
