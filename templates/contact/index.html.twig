{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.flashes("success") %}
        <div class="alert alert-success text-center">
            {{ message }}
        </div>
        {% endfor %}
        <h3 class="text-center">Laissez-nous un petit message !</h3>
        <hr>
        <div class="row">
            <div class="col-md-6">
                {{ form(form) }}
            </div>
            <div class="col-md-6">
                <img src="{{ asset("images/contact.jpg") }}" width="100%" />
            </div>
        </div>

    </div>
{% endblock %}
